@model APP_FUTBOL.Models.Encuentro

@{
    ViewBag.Title = "Soccer total";
}

<h2>Nuevo encuentro</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">

        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <label class="control-label col-md-2">Fecha:</label> 
            <div class="col-md-10">
                @Html.EditorFor(model => model.fec_encuentro, new { htmlAttributes = new { @class = "form-control datepicker", @id = "datepicker", @type = "date", @required = "true" } })
                @Html.ValidationMessageFor(model => model.fec_encuentro, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Hora:</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.hora_encuentro, new { htmlAttributes = new { @class = "form-control", @type = "time" } })
                @Html.ValidationMessageFor(model => model.hora_encuentro, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Campo No. :</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.numero_campo, new { htmlAttributes = new { @class = "form-control", @type = "number" } })
                @Html.ValidationMessageFor(model => model.numero_campo, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group hidden">
            <div class="col-md-10">
                @Html.DropDownList("campeonato", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.campeonato, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Equipo local:</label>
            <div class="col-md-10">
                @Html.DropDownList("equipo_local", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.equipo_local, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Equipo visitante:</label>
            <div class="col-md-10">
                @Html.DropDownList("equipo_visita", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.equipo_visita, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

@model APP_FUTBOL.Models.Encuentro

@{
    ViewBag.Title = "Soccer Total";
}

<h2>Datos del encuentro</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">

        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.id)

        <div class="col-lg-12 text-center">
            <h2>@Html.DisplayFor(model => model.Cat_Equipo.nombre) vs @Html.DisplayFor(model => model.Cat_Equipo1.nombre)</h2>
            <h3>@Html.DisplayFor(model => model.goles_local) - @Html.DisplayFor(model => model.goles_visita)</h3>



            <div class="form-group">
                <input type="submit" value="Fin de partido" class="btn btn-primary" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
